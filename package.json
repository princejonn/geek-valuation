{
  "name": "geek-valuation",
  "version": "0.0.2",
  "description": "A command-line tool for scraping historical sale prices from BoardGameGeek's marketplace and generating valuation reports for your board game collection.",
  "license": "MIT",
  "author": "Jonn Nilsson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princejonn/geek-valuation.git"
  },
  "bugs": {
    "url": "https://github.com/princejonn/geek-valuation/issues"
  },
  "homepage": "https://github.com/princejonn/geek-valuation#readme",
  "keywords": [
    "boardgamegeek",
    "bgg",
    "board-games",
    "valuation",
    "price-history",
    "collection",
    "scraper"
  ],
  "bin": {
    "geek-valuation": "dist/main.js"
  },
  "files": [
    "dist/**/*",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json && chmod +x dist/main.js",
    "format": "prettier . --write",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "husky",
    "prepublishOnly": "tsc --noEmit && prettier . --check && eslint . --ext .ts && jest && npm run build",
    "start": "ts-node src/main.ts",
    "test": "jest",
    "typecheck": "tsc --watch",
    "update": "ncu -i",
    "verify": "tsc --noEmit && prettier . --check && eslint . --ext .ts && jest"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "puppeteer": "^24.31.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/commander": "^2.12.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.2",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
